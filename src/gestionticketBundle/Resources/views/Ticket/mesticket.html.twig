
{% extends 'base.html.twig' %}
{% block body %}





    <div id="wrapper">
        <div id="main">

            <div id="content">
                <div id="aside1">
                    <div class="ad-box">Tickets</div>
                    <div id="fixed-example1">
                        <h2>Sidebar <span>(fixed)</span></h2>
                        <ul class="sample-nav">
                         </ul>
                    </div>


                </div>


                <div id="aside2">
                    <div class="ad-box">Tickets</div>

                    <div id="fixed-example2">

                        <ul class="sample-nav">
                            <li>
                                <a href="#"><!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                                        Launch demo modal
                                    </button></a>
                            </li>
                            <li><a href="{{ path('gestionticket_afficher_ticket')}}">Toutes les annonces </a></li>
                            <li><a href="#"> </a></li>
                        </ul>

                    </div>

                </div>
                <div id="column">
                    <h2>Content</h2>
                    <form method="post" action="{{ path('gestionticket_mestticket') }}">
                    {%  for ticket in ticketss %}
                        <div class="list-group">

                            <figure class="snip1195">
                                <h4>{{ ticket.idAnnonceur.username }}</h4>
                                <div class="image">
                                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/331810/sq-sample14.jpg" alt="sq-sample14"/>
                                </div>
                                <div class="rating">
                                    <i class="ion-ios-star"></i><i class="ion-ios-star"></i><i class="ion-ios-star"></i><i class="ion-ios-star"></i><i class="ion-ios-star-outline"></i>
                                </div>
                                <figcaption class="aaa">


                                    <div id="flex">
                                        <div><p class="event">{{ ticket.idmatch.nomEquipe1 }} VS
                                                {{ ticket.idmatch.nomEquipe2 }}</p>
                                            <h2 >  {{ ticket.categories }}</h2>
                                        </div>
                                        <div class="fix"></div>
                                        <div>
                                            <div class="sce">
                                                <div class="icon">
                                                    <i class="fa fa-table"></i>
                                                </div>
                                                <p> {{ ticket.idmatch.date }}</p>

                                            </div>
                                            <div class="fix"></div>
                                            <div class="loc">
                                                <div class="icon">
                                                    <i class="fa fa-map-marker"></i>
                                                </div>
                                                <p> {{ ticket.idmatch.nomStade }}</p>
                                            </div>

                                        </div>
                                        <div class="fix"></div>
                                        <div>
                                            <div class="loc">
                                                <div class="icon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                                <p>{{ ticket.idmatch.heure }} Am</p>

                                            </div>
                                            <div class="fix"></div>
                                            <div class="sce">
                                                <div class="icon">
                                                    <i class="fa fa-ticket"></i>
                                                </div>
                                                <p> nbr ticket {{ ticket.nbticket }} </p>

                                            </div>

                                        </div>
                                        <div class="price">
                                            ${{ ticket.prix }}
                                        </div>

                                    </div>

                                </figcaption>

                                <div class="fix"></div>
                                 <a  class="add-to-cart" href="{{ path('gestionticket_supprimer_ticket',{'id':ticket.idTicket}) }}" >Supprimer</a>


                                <a  class="add-to-cart"href="{{ path('gestionticket_modifier_ticket',{'id':ticket.idTicket}) }}"><!-- Button trigger modal -->
                                    modifier
                                  </a>

                            </figure>



                        </div>
                    {% endfor %}
                    </form>
                </div>
            </div>

        </div>

    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" width="1000px">
        <div class="modal-dialog modal-dialog-centered" role="document" style="width:1250px;background: rgba(0, 0, 0, 0.3);">
            <div ><!--class="modal-content"-->
                <div ><!--class="modal-header"-->
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div >

                    <div class="form-progress">
                        <div><img src="http://res.cloudinary.com/rinma/image/upload/v1497391324/airplane-takeoff-5252_orwmj3.png" class="plane" alt="" /></div>
                        <progress class="form-progress-bar" min="0" max="100" value="0" step="33" aria-labelledby="form-progress-completion"></progress>
                        <div class="form-progress-indicator one active"></div>
                        <div class="form-progress-indicator two"></div>
                        <!--  <div class="form-progress-indicator three"></div>-->

                        <div class="form-progress-indicator four"></div>
                        <p id="form-progress-completion" class="js-form-progress-completion sr-only" aria-live="polite">0% complete</p>
                    </div>


                    <form id="claim"  method="post" action="{{ path('gestionticket_add_ticket') }}">

                        <section id="step1" class="form-step" data-step="1">
                            <fieldset>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <h2>Tickets</h2>
                                        <h5>1/2</h5>
                                    </div>

                                    <div class="col-xs-12 col-sm-12">
                                        <div class="group stops">
                                            <input  type="number" name="nombreticket"  min="0"><span class="highlight"></span><span class="bar"></span>
                                            <label> NibreTickets:</label></div>

                                    </div>



                                    <div >
                                        <div class="group stops" >
                                            <select name="categories" class="col-xs-12 col-sm-12 ">
                                                <option value="virage"> virage </option>
                                                <option value="peluse"> peluse </option>
                                                <option value="gradin"> gradin </option>
                                            </select>

                                        </div>

                                        <div >
                                            <div class="group stops">
                                                <select name="match" class="col-xs-12 col-sm-12">
                                                    {% for match in matchs %}
                                                        <option value="{{ match.idMatch}}">{{ match.nomEquipe1}} VS {{ match.nomEquipe2}}</option>
                                                    {% endfor %}
                                                </select>
                                                <!--   <input  type="text"><span class="highlight"></span><span class="bar"></span>
                                                    <label> Matchs :</label></div>

                                                <!--  <div id="2nd"class="group stops hidden ">
                                                      <input  type="text"><span class="highlight"></span><span class="bar"></span>
                                                      <label>2nd stop</label></div>

                                                  <div id="3rd"class="group stops hidden">
                                                      <input  type="text"><span class="highlight"></span><span class="bar"></span>
                                                      <label>3rd stop</label></div>
                                             --> </div>
                                            <!--
                                                                <div class="col-xs-12 col-sm-12">
                                                                    <button type="button" id="connecting" class="btn">+Add connecting flights</button>
                                                                    <button type="button" id="connectingminus" class="btn hidden">-</button>
                                                                </div>-->
                                        </div>
                                        <div class="col-xs-12 col-sm-12">
                                            <div class="group stops">
                                                <input  type="number" name="prix"><span class="highlight"></span><span class="bar"></span>
                                                <label> Prix:</label></div>

                                        </div>
                                        <div class="col-xs-12 col-sm-12 right">
                                            <button type="button" id="korak1" class="btn next">Next</button></div>
                                    </div>
                                </div>
                            </fieldset>
                        </section>



                        <section id="step2" class="form-step hidden" data-step="2">
                            <fieldset>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <h2>Comfirmation!</h2>
                                        <h5>2/2</h5>
                                    </div>
                                    <div class="col-sm-12">
                                        <h4>Vous comfirmez votre ajout ?</h4>

                                    </div>

                                    <div class="col-xs-12 col-sm-12 right">
                                        <button type="button" id="nazad1" class="btn previous">Previous</button>
                                        <button type="submit" id="korak2" class="btn next" >Ajouter</button>

                                    </div>
                                </div>
                            </fieldset>
                        </section>



                    </form>

                </div>

            </div>
        </div>
    </div>

<!--modifier-->










    <link rel="stylesheet" href="{{ asset('gestionticket/css/') }}style.css">

    <script  src="{{ asset('gestionticket/js/') }}index.js"></script>
    <link rel="stylesheet" href="{{ asset('gestionticket/css/') }}styleafichage.css">



    <script  src="{{ asset('gestionticket/js/') }}indexajouter.js"></script>


    <link rel="stylesheet" href="{{ asset('gestionticket/css/') }}styleajouter.css">



{% endblock %}
