<script type="{{ asset('ticketRssourc/text/') }}javascript" src="//packages.arlocdn.net/jscontrols/1.0/resources/elementqueries.js" charset="utf-8"></script>
<script type="{{ asset('ticketRssourc/text/') }}javascript" src="//connect.arlocdn.net/jscontrols/1.0/init.js" charset="utf-8" defer="defer"></script>



<script  src="{{ asset('ticketRssourc/js/') }}index.js"></script>




</body>
